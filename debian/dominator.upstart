description "Start Dominator services"


pre-start script
    . /etc/default/dominator
    ls $CONFIGDIR | while read CONFIG; do
        start dominator-service CONFIG=${CONFIG%.yaml}
    done
end script

post-stop script
    initctl list | grep -F 'dominator-service' | sed -r 's/.* \((.*)\) .*/\1/' | while read CONFIG; do
        stop dominator-service CONFIG=$CONFIG
    done
end script
